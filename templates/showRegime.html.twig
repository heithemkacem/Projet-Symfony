{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ regime.nomRegime }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ regime.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ regime.nomRegime }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ regime.duree }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ regime.type }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('regime_edit', {'id': regime.id}) }}">Edit</a>
    <a href="{{ path('regime_index') }}">Back to the list</a>
{% endblock %}
